extends layout

block content
  .row
    .col-md-4
    .col-lg-4#login
      .text-center
        h2.text-center.page-header Start Chatting
      
      form(method="post" action="/users/login")
        input.form-control(name='username', type='text', placeholder='Username', autofocus='', style="border-radius:0;")
        .form-group
        input.form-control(name='password', type='password', placeholder='Password' ,style="border-radius:0;")
        .form-group
        input.btn-block.btn(name='submit', type='submit', value='Login' style="background-color:black")
        br
        // STEP ONE and SEVEN OF THE INSTRUCTION
        p.text-center
          a.text-light(href='/users/forgot') Forgot your password or username?
        br
        br
    .col-md-4
        if success
          .alert.alert-success
            strong Success, #{success}