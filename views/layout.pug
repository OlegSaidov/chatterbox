doctype html
html
  head
    title=title
    script(src='https://code.jquery.com/jquery-3.3.1.js')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(href='/stylesheets/style.css', rel='stylesheet')
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="/javascripts/bootstrap.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js')
    script(src='/emoji/emojionearea.min.js')
    link(href='/emoji/emojionearea.min.css', rel = 'stylesheet')
    
    
  body
    .navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Chatter Box
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if user
              li(class=(title =='Member' ? 'active' : ''))
                a(href="/") Welcome #{user.name}, the Chatterer
          ul.nav.navbar-nav.navbar-right
            if !user
              li(class=(title =='Sign up' ? 'active' : ''))
                a(href="/users/signup") Sign Up
              li(class=(title =='Login' ? 'active' : ''))
                a(href="/users/login") Login
          ul.nav.navbar-nav.navbar-right
            if user
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                    img.img-circle(src=user.profileimage hight="25px" width = "25px")
                    span &nbsp;	&nbsp;
                    span #{user.username}
                    span.caret
                ul.dropdown-menu(style="color:black;") 
                  li(style="color:black;")
                    a(href="/users/logout", style="color:black;") Logout
    - var msg = messages();
    if(msg)
      .alert.alert-dismissible.mainalert(data-dismiss='alert')!=msg

    .container
      block content

